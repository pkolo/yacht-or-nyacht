<div class="row song-list-item">
  <div class="song-list-box yachtski avg col-1 yachtski-column"><%= song['scores']['yachtski'].round(2) %></div>
  <div class="song-list-box col-1 track-column hideable"><%= song['track_no'] %></div>
  <div class="song-list-box col-5 title-column">

    <% if @album['artists'].find {|artist| artist['name'] == "Various"} %>
      <%= song['personnel']['artists'].map {|artist| "<a href='#{artist['resource_url']}'>#{artist['name']}</a>" }.join(", ") %> -
    <% end %>
    <a href="<%= song['resource_url'] %>"><%= song['title'] %></a>
  </div>
  <div class="hideable">
    <div class="song-list-box yachtski jd-column col-1"><%= song['scores']['jd'] %></div>
    <div class="song-list-box yachtski hunter-column col-1"><%= song['scores']['hunter'] %></div>
    <div class="song-list-box yachtski steve-column col-1"><%= song['scores']['steve'] %></div>
    <div class="song-list-box yachtski dave-column col-1"><%= song['scores']['dave'] %></div>
    <div class="song-list-box episode-column col-1"><a href="<%= song['episode']['resource_url'] %>"><%= song['episode']['number'] %></a></div>
  </div>
</div>
