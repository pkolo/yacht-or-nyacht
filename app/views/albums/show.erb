<div class="bg-wrapper row">
  <div class="sidebar-wrapper col-3">
    <div class="sidebar-bg-shape yachtski">
      <div class="yachtski avg" style="display:none"><%= @album.yachtski %></div>
      <div class="big-score"><%= @album.yachtski.round(2) %></div>
      <div class="yacht-status">Average Yachtski</div>

      <div class="personnel-panel col-9">
        &nbsp
      </div>
    </div>
  </div>
</div>

<div class="content-wrapper">
  <div class="row album-container">

    <div class="score-sidebar col-3">
      &nbsp
    </div>

    <div class="col-9 album-info">
      <div class="content-section">
        <div class="big-title">
          <i><%= @album.title %></i>
        </div>
        <div class="artist-credit">
          by <%= @album.artist_list %> | <%= @album.year %>
        </div>
      </div>

      <div class="content-section">
        <div class="sidebar-title">
          <div class="yachtski-list-item" style="display:none"><%= @album.yachtski %></div>
          Album Tracklist
        </div>
        <%= erb :'albums/_song_list', locals: { songs: @songs } %>
      </div>

      <div class="content-section">
        <div class="sidebar-title">
          <div class="yachtski-list-item" style="display:none"><%= @album.yachtski %></div>
          Album Personnel
        </div>
        <div class="credit-container">
          <%= erb :'songs/_personnel_combine_roles', locals: { credits: @album.personnel_combined_roles } %>
        </div>
      </div>
    </div>

  </div>
</div>
