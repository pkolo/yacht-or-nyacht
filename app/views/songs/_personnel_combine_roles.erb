<% if credits.any? %>
  <div class="personnel-section">
    <div class="personnel-credits-list">
      <% credits.sort_by {|credit| credit[:personnel].yachtski}.reverse.each do |credit| %>
      <div class="row personnel-credit">
        <div class="yachtski-list-item" style="display:none"><%= credit[:personnel].yachtski %></div>
        <div class="bullet col-1">&nbsp;</div>
        <div class="col-4">
          <a href="/personnel/<%= credit[:personnel].id %>"><%= credit[:personnel].name %></a>
        </div>
        <div class="col-7 role">
          <%= credit[:roles].join(', ') %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
