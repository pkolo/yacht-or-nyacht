<div class="row">
  <form class="song-form" method="POST" action="/episodes/<%= @episode.id %>/songs">
    <div class="col-4">
      <div>Title: <input type="text" name="song[title]"></div>
      <div>Artist: <input type="text" name="song[artist]"></div>
      <div>Year: <input type="text" name="song[year]"></div>
    </div>

    <div class="col-4">
      JD Score:<input class="score-input" type="number" min="0" max="100" step="0.01" name="song[jd_score]"><br>
      Hunter Score:<input class="score-input" type="number" min="0" max="100" step="0.01" name="song[hunter_score]"><br>
      Steve Score:<input class="score-input" type="number" min="0" max="100" step="0.01" name="song[steve_score]"><br>
      Dave Score:<input class="score-input" type="number" min="0" max="100" step="0.01" name="song[dave_score]"><br>
    </div>

    <div class="yachtski col-4">
      <p>Yachtski Score:</p>
      <h1><span class="yachtski-score"></h1>
      <input type="submit">
    </div>
  </form>
</div>
