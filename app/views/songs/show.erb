<div class="bg-wrapper row">
  <div class="sidebar-wrapper col-3">
    <div class="sidebar-bg-shape yachtski">
      <div class="yachtski avg" style="display:none"><%= @song.yachtski %></div>
      <div class="big-score"><%= @song.yachtski.round(2) %></div>
      <div class="yacht-status"><%= @song.status %></div>
      <div class="row score">
        <div class="col-6 host">
          JD
        </div>
        <div class="yachtski avg side-score col-6">
          <%= @song.jd_score %>
        </div>
      </div>
      <div class="row score">
        <div class="col-6 host">
          Hunter
        </div>
        <div class="yachtski avg side-score col-6">
          <%= @song.hunter_score %>
        </div>
      </div>
      <div class="row score">
        <div class="col-6 host">
          Steve
        </div>
        <div class="yachtski avg side-score col-6">
          <%= @song.steve_score %>
        </div>
      </div>
      <div class="row score">
        <div class="col-6 host">
          Dave
        </div>
        <div class="yachtski avg side-score col-6">
          <%= @song.dave_score %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-9">
    &nbsp
  </div>
</div>



<div class="content-wrapper">
  <div class="row">
    <div class="col-3">
      <div class="sidebar-section">
        &nbsp
      </div>
    </div>

    <div class="col-9">
      <div class="content-section">
        <div class="big-title"><%= @song.title %></div>
        <div class="artist-credit">by <%= @song.artist_list %></div>
      </div>


      <div class="content-section">
        <div class="sidebar-title">
          <div class="yachtski-list-item" style="display:none"><%= @song.yachtski %></div>
          Track Info
        </div>

        <div class="personnel-section song-info">
          <div class="row">

            <div class="col-4">
              <div class="row">Album: <a href="/albums/<%= @song.album.id %>"><%= @song.album.title %></a></div>
              <div class="row">Year: <%= @song.year %></div>
              <div class="row">Episode: <a href="/episodes/<%= @song.episode.id %>"><%= @song.episode.number %></a></div>
            </div>

          </div>
        </div>
      </div>


    <% if @song.album %>
      <% if @song.credits.players.any? %>
        <div class="content-section">
          <div class="sidebar-title">
            Track Personnel
            <div class="yachtski-list-item" style="display:none"><%= @song.yachtski %></div>
          </div>

          <section class="credit-container">
            <%= erb :'songs/_personnel_combine_roles', locals: { credits: @song.personnel_combined_roles } %>
          </section>
        </div>
      <% end %>

      <% if @song.album.credits.players.any? %>
        <div class="content-section">
          <div class="sidebar-title">
            Track Personnel
            <div class="yachtski-list-item" style="display:none"><%= @song.yachtski %></div>
          </div>

          <section class="credit-container">
            <%= erb :'songs/_personnel_combine_roles', locals: { credits: @song.personnel_combined_roles } %>
          </section>
        </div>
      <% end %>

    <% else %>
      <a href="/songs/<%= @song.id %>/edit">Edit entry</a>
    <% end %>
</div>
