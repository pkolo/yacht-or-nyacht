<% if credits.any? %>
  <div class="personnel-section">
    <div class="sidebar-title">
      <div class="yachtski-list-item" style="display:none"><%= yachtski %></div>
      <%= type %> Contributions
    </div>
    <div class="personnel-credits-list personnel-section">
      <% credits.each do |credit| %>
      <div class="row personnel-credit">
        <div class="yachtski-list-item" style="display:none"><%= credit[:media].yachtski %></div>
        <div class="bullet col-1">&nbsp;</div>
        <div class="col-6">
          <%= credit[:media].artist_list %> - <a href="/<%= type.downcase + 's' %>/<%= credit[:media].slug %>"><%= credit[:media].title %></a>
        </div>
        <div class="col-5 role">
          <%= credit[:roles].join(', ') %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
